<Page x:Class="CityBudget.PageDecisions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Decyzje"
      Loaded="Page_Loaded">

    <Border BorderBrush="#2D2D30"
            BorderThickness="0"
            ClipToBounds="True"
            Margin="0,0,0,0"
            Background="Transparent">
        
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Margin="0"
                Background="#3A3A40"
                CornerRadius="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Text="BIEŻĄCE SPRAWY (ŁATWE)"
                           Foreground="#88FF88"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="10"
                           HorizontalAlignment="Center" />

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ListEasy">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#444"
                                        Margin="10"
                                        CornerRadius="5"
                                        Padding="10"
                                        BorderBrush="#555"
                                        BorderThickness="1">
                                    <StackPanel>
                                            <TextBlock Text="{Binding Title}"
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       FontSize="16"
                                                       HorizontalAlignment="Left" />
                                            <TextBlock Text="{Binding FrequencyText}"
                                                       Foreground="#FFFF00"
                                                       FontSize="10"
                                                       HorizontalAlignment="Right"
                                                       VerticalAlignment="Center"
                                                       Margin="10,0,0,0" />

                                            <StackPanel Orientation="Horizontal"
                                                    Margin="0,2">
                                            <TextBlock Text="Dotyczy: "
                                                       Foreground="#888"
                                                       FontSize="11" />
                                            <TextBlock Text="{Binding TargetDescription}"
                                                       Foreground="#AAAAFF"
                                                       FontSize="11"
                                                       FontStyle="Italic" />
                                        </StackPanel>

                                        <TextBlock Text="{Binding Description}"
                                                   Foreground="#CCC"
                                                   TextWrapping="Wrap"
                                                   Margin="0,5" />

                                        <Grid Margin="0,10,0,0">
                                            <TextBlock Text="{Binding CostText}"
                                                       Foreground="{Binding CostColor}"
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Left" />

                                            <Button Content="WYKONAJ"
                                                    Click="ButtonDecision_Click"
                                                    Tag="{Binding}"
                                                    HorizontalAlignment="Right"
                                                    Padding="10,2"
                                                    Background="#4CAF50"
                                                    Foreground="White" />
                                        </Grid>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <Border Grid.Column="1"
                Margin="0"
                Background="#403A3A"
                CornerRadius="0,0,12,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Text="DYLEMATY (TRUDNE)"
                           Foreground="#FF8888"
                           FontSize="18"
                           FontWeight="Bold"
                           Margin="10"
                           HorizontalAlignment="Center" />

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ListHard">
                        <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#444"
                                            Margin="10"
                                            CornerRadius="5"
                                            Padding="10"
                                            BorderBrush="#555"
                                            BorderThickness="1">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}"
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       FontSize="16"
                                                       HorizontalAlignment="Left" />
                                            <TextBlock Text="{Binding FrequencyText}"
                                                       Foreground="#FFFF00"
                                                       FontSize="10"
                                                       HorizontalAlignment="Right"
                                                       VerticalAlignment="Center"
                                                       Margin="10,0,0,0" />

                                            <StackPanel Orientation="Horizontal"
                                                        Margin="0,2">
                                                <TextBlock Text="Dotyczy: "
                                                           Foreground="#888"
                                                           FontSize="11" />
                                                <TextBlock Text="{Binding TargetDescription}"
                                                           Foreground="#AAAAFF"
                                                           FontSize="11"
                                                           FontStyle="Italic" />
                                            </StackPanel>

                                            <TextBlock Text="{Binding Description}"
                                                       Foreground="#CCC"
                                                       TextWrapping="Wrap"
                                                       Margin="0,5" />

                                            <Grid Margin="0,10,0,0">
                                                <TextBlock Text="{Binding CostText}"
                                                           Foreground="{Binding CostColor}"
                                                           FontWeight="Bold"
                                                           HorizontalAlignment="Left" />

                                                <Button Content="PODEJMIJ RYZYKO"
                                                        Click="ButtonDecision_Click"
                                                        Tag="{Binding}"
                                                        HorizontalAlignment="Right"
                                                        Padding="10,2"
                                                        Background="#D32F2F"
                                                        Foreground="White" />
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
    </Border>
</Page>