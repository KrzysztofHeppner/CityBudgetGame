<Window x:Class="CityBudget.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CityBudget"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        Background="Transparent"
        MinHeight="450"
        MinWidth="800"
        MaxHeight="450"
        MaxWidth="800">
    <Border Background="#FF505050"
            CornerRadius="12"
            BorderBrush="Transparent"
            BorderThickness="0">
        <Border BorderBrush="#FF505050"
                BorderThickness="1"
                CornerRadius="12"
                Background="#1e1e1e"
                ClipToBounds="True"
                MouseDown="Grid_MouseDown">
            <Grid>
                <Border BorderBrush="#888888"
                        BorderThickness="1"
                        Background="#1e1e1e"
                        ClipToBounds="True"
                        MinHeight="36"
                        MinWidth="100"
                        Width="100"
                        Height="36"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        CornerRadius="18,18,18,18"
                        Margin="0,150,0,0"
                        Name="BorderNewGame"
                        MouseEnter="ButtonNewGame_MouseEnter"
                        MouseLeave="ButtonNewGame_MouseLeave">
                    <Button Content="Nowa Gra"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,0"
                            VerticalAlignment="Center"
                            Click="ButtonNewGame_Click"
                            Background="Transparent"
                            Foreground="#888888"
                            FontSize="15"
                            FontFamily="Arial"
                            Name="ButtonNewGame">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Grid>
                                                <Ellipse Fill="{TemplateBinding Background}"
                                                         x:Name="ButtonEllipse" />
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center" />


                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>
                <Border BorderBrush="#888888"
                        BorderThickness="1"
                        Background="#1e1e1e"
                        ClipToBounds="True"
                        MinHeight="36"
                        MinWidth="100"
                        Width="100"
                        Height="36"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        CornerRadius="18,18,18,18"
                        Margin="0,200,0,0"
                        Name="BorderLoadGame"
                        MouseEnter="ButtonLoadGame_MouseEnter"
                        MouseLeave="ButtonLoadGame_MouseLeave">
                    <Button Content="Wczytaj"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,0"
                            VerticalAlignment="Center"
                            Click="ButtonLoadGame_Click"
                            Background="Transparent"
                            Foreground="#888888"
                            FontSize="15"
                            FontFamily="Arial"
                            Name="ButtonLoadGame">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Grid>
                                                <Ellipse Fill="{TemplateBinding Background}"
                                                         x:Name="ButtonEllipse" />
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center" />


                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>
            </Grid>
        </Border>
    </Border>
</Window>
