<Window x:Class="CityBudget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CityBudget"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStyle="None"
        AllowsTransparency="True"
        MaxHeight="1024"
        MaxWidth="1280"
        MinHeight="1024"
        MinWidth="1280"
        ResizeMode="NoResize"
        Background="Transparent">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resource/StartStop.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border>
        <Border.OpacityMask>
            <VisualBrush>
                <VisualBrush.Visual>
                    <Border Background="White"
                            CornerRadius="1"
                            Height="100"
                            Width="100" />
                </VisualBrush.Visual>
            </VisualBrush>
        </Border.OpacityMask>


        <Grid Background="#FF252525"
              Height="1024"
              Width="1280">

            <Grid MaxWidth="300"
                  MinWidth="300"
                  Margin="0,100,0,0"
                  HorizontalAlignment="Left"
                  Background="#FF1b1b1b">
                <Label Content="Ostatnie Wiadomości"
                       HorizontalAlignment="Center"
                       Margin="20,5,20,0"
                       VerticalAlignment="Top"
                       HorizontalContentAlignment="Center"
                       Foreground="White"
                       FontSize="25" />
            </Grid>


            <Grid MinHeight="100"
                  VerticalAlignment="Top"
                  Background="#FF1f1f1f"
                  Margin="0,00,0,0"
                  MouseDown="Grid_MouseDown">

                <Button x:Name="BtnExit"
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="#FF1f1f1f"
                        BorderThickness="0,0,0,0"
                        MouseEnter="BtnExit_MouseEnter"
                        MouseLeave="BtnExit_MouseLeave"
                        Click="BtnExit_Click">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>

                    <Viewbox Width="30"
                             Height="30"
                             Margin="-1,-1,0,0">
                        <Canvas Width="30"
                                Height="30">
                            <Path Data="M 8,8 L 22,22 M 8,22 L 22,8"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Stroke="White">
                            </Path>
                        </Canvas>
                    </Viewbox>
                </Button>

                <Button x:Name="MinExit"
                        Width="30"
                        Height="30"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="#FF1f1f1f"
                        BorderThickness="0,0,0,0"
                        Margin="0,0,30,0"
                        MouseEnter="MinExit_MouseEnter"
                        MouseLeave="MinExit_MouseLeave"
                        Click="MinExit_Click">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>

                    <Viewbox Width="30"
                             Height="30"
                             Margin="-1,-1,0,0">
                        <Canvas Width="30"
                                Height="30">
                            <Path Data="M 8,15 L 22,15"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Stroke="White">
                            </Path>
                        </Canvas>
                    </Viewbox>
                </Button>

                <Button x:Name="PlayStopButton"
                        Width="50"
                        Height="50"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="PlayStopButton_Click"
                        Margin="0,0,15,15">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Ellipse Fill="{TemplateBinding Background}"
                                                     x:Name="ButtonEllipse" />
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center" />


                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>

                    <Viewbox Width="50"
                             Height="50">
                        <Canvas Width="50"
                                Height="50">
                            <Path x:Name="IconPath"
                                  Fill="White"
                                  Data="M 12,12 L 12,38 L 22,38 L 22,12 Z M 28,12 L 28,38 L 38,38 L 38,12 Z"
                                  RenderTransformOrigin="0.5,0.5"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center">
                                <Path.RenderTransform>
                                    <ScaleTransform x:Name="IconTransform"
                                                    ScaleX="1"
                                                    ScaleY="1" />
                                </Path.RenderTransform>
                            </Path>
                        </Canvas>
                    </Viewbox>
                </Button>
                <Label Foreground="White"
                       x:Name="TimeText"
                       Content="1.01.2000"
                       HorizontalAlignment="Left"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       Margin="390,44,0,0"
                       VerticalAlignment="Top"
                       FontSize="20"
                       MinWidth="100"
                       MinHeight="40" />

            </Grid>
            <TextBlock Name="TextBlock"
                       HorizontalAlignment="Left"
                       Margin="672,311,0,0"
                       TextWrapping="Wrap"
                       Text="TextBlock"
                       VerticalAlignment="Top"
                       Height="113"
                       Width="149"
                       Foreground="White" />

        </Grid>
    </Border>
</Window>
