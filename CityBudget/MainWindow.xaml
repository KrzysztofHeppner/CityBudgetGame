<Window x:Class="CityBudget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CityBudget"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        Background="Transparent"
        Height="720"
        Width="1280"
        MinWidth="1024"
        MinHeight="400"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resource/StartStop.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0,0,0,0"
                      CornerRadius="0" />
    </WindowChrome.WindowChrome>

    <Border Background="#FF505050"
            CornerRadius="12"
            BorderBrush="Transparent"
            BorderThickness="0">
        <Border.OpacityMask>
            <VisualBrush>
                <VisualBrush.Visual>
                    <Border Background="Black"
                            CornerRadius="10"
                            Width="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=ActualWidth}"
                            Height="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=ActualHeight}" />
                </VisualBrush.Visual>
            </VisualBrush>
        </Border.OpacityMask>




        <Border BorderBrush="#FF505050"
                BorderThickness="1"
                CornerRadius="12"
                Background="#FF252525"
                ClipToBounds="True">







            <Grid>
                <Border BorderBrush="#FF505050"
                        BorderThickness="0"
                        Background="#FF1b1b1b"
                        ClipToBounds="True"
                        CornerRadius="0,0,0,12"
                        Width="300"
                        MinWidth="300"
                        Margin="0,100,0,0"
                        HorizontalAlignment="Left">
                    <Grid Width="300"
                          MinWidth="300"
                          Margin="0,0,0,0"
                          HorizontalAlignment="Left">

                        <Label Content="Ostatnie Wiadomości"
                               HorizontalAlignment="Center"
                               Margin="20,5,20,0"
                               VerticalAlignment="Top"
                               HorizontalContentAlignment="Center"
                               Foreground="White"
                               FontSize="25" />

                        <ItemsControl ItemsSource="{Binding RecentNews}"
                                      Margin="0,60,0,0"
                                      Width="280">

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderThickness="2"
                                            ClipToBounds="True"
                                            MinHeight="50"
                                            Width="250"
                                            HorizontalAlignment="Center"
                                            CornerRadius="10"
                                            Margin="0,0,0,10"
                                            Background="#FF313131">

                                        <Border.BorderBrush>
                                            <SolidColorBrush Color="{Binding BorderColor}" />
                                        </Border.BorderBrush>

                                        <StackPanel Margin="10">
                                            <TextBlock Text="{Binding Time}"
                                                       Foreground="Gray"
                                                       FontSize="10"
                                                       Margin="0,0,0,2" />
                                            <TextBlock Text="{Binding Text}"
                                                       TextWrapping="Wrap"
                                                       Foreground="White"
                                                       FontSize="12" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>

                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </Grid>
                </Border>


                <Border BorderBrush="#FF505050"
                        BorderThickness="0"
                        Background="#FF1f1f1f"
                        ClipToBounds="True"
                        MinHeight="100"
                        VerticalAlignment="Top"
                        CornerRadius="12,12,0,0"
                        MouseDown="Grid_MouseDown">
                    <Grid MinHeight="100"
                          VerticalAlignment="Top"
                          Margin="0,0,0,0">

                        <Label x:Name="HappinessLabel"
                               Content="Zadowolenie: 50%"
                               VerticalAlignment="Top"
                               Margin="0,35,250,0"
                               Foreground="White"
                               FontSize="16"
                               HorizontalAlignment="Right"
                               Width="200" />

                        <Label x:Name="PeopleLabel"
                               Content="Ludność: 0"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Top"
                               Margin="0,60,250,0"
                               Foreground="White"
                               FontSize="16"
                               Width="200" />

                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Top"
                                    Margin="100,30,0,0"
                                    HorizontalAlignment="Left">
                            <Border BorderBrush="#888888"
                                    BorderThickness="1"
                                    Background="#1e1e1e"
                                    ClipToBounds="True"
                                    MinHeight="36"
                                    MinWidth="100"
                                    Width="100"
                                    Height="36"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    CornerRadius="18,18,18,18"
                                    Name="BorderSave"
                                    MouseEnter="ButtonSave_MouseEnter"
                                    MouseLeave="ButtonSave_MouseLeave"
                                    MouseLeftButtonDown="ButtonSave_Click">
                                <Button Content="Zapisz"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,0"
                                        VerticalAlignment="Center"
                                        Click="ButtonSave_Click"
                                        Background="Transparent"
                                        Foreground="#888888"
                                        FontSize="15"
                                        FontFamily="Arial"
                                        Name="ButtonSave">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Grid>
                                                            <Ellipse Fill="{TemplateBinding Background}"
                                                                     x:Name="ButtonEllipse" />
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center" />


                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Border>
                            <Border BorderBrush="#888888"
                                    BorderThickness="1"
                                    Background="#1e1e1e"
                                    ClipToBounds="True"
                                    MinHeight="36"
                                    MinWidth="100"
                                    Width="100"
                                    Height="36"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    CornerRadius="18,18,18,18"
                                    Name="BorderLoad"
                                    Margin="10,0,0,0"
                                    MouseEnter="ButtonLoad_MouseEnter"
                                    MouseLeave="ButtonLoad_MouseLeave"
                                    MouseLeftButtonDown="ButtonLoad_Click">
                                <Button Content="Wczytaj"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,0"
                                        VerticalAlignment="Center"
                                        Click="ButtonLoad_Click"
                                        Background="Transparent"
                                        Foreground="#888888"
                                        FontSize="15"
                                        FontFamily="Arial"
                                        Name="ButtonLoad">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Grid>
                                                            <Ellipse Fill="{TemplateBinding Background}"
                                                                     x:Name="ButtonEllipse" />
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center" />


                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Border>
                        </StackPanel>

                        <Border BorderBrush="#FF505050"
                                BorderThickness="1"
                                Background="Transparent"
                                ClipToBounds="True"
                                MinHeight="50"
                                MinWidth="50"
                                Width="50"
                                Height="50"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                CornerRadius="25,25,25,25"
                                Margin="25,25,0,0">
                            <Button Background="Transparent"
                                    Click="Settings_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Grid>
                                                        <Ellipse Fill="{TemplateBinding Background}"
                                                                 x:Name="ButtonEllipse" />
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center" />


                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>

                        </Border>

                        <Border BorderBrush="#FF505050"
                                BorderThickness="1"
                                Background="#FF00FF4A"
                                ClipToBounds="True"
                                MinHeight="50"
                                MinWidth="50"
                                Width="50"
                                Height="50"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                CornerRadius="15,15,15,15"
                                Margin="350,0,0,0">
                            <Button Background="Transparent"
                                    Click="ButtonGreen_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Grid>
                                                        <Ellipse Fill="{TemplateBinding Background}"
                                                                 x:Name="ButtonEllipse" />
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center" />


                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>

                        </Border>

                        <Border BorderBrush="#FF505050"
                                BorderThickness="0"
                                Background="#FF0010FF"
                                ClipToBounds="True"
                                MinHeight="50"
                                MinWidth="50"
                                Width="50"
                                Height="50"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                CornerRadius="15,15,15,15"
                                Margin="425,0,0,0">
                            <Button Background="Transparent"
                                    Click="ButtonBlue_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Grid>
                                                        <Ellipse Fill="{TemplateBinding Background}"
                                                                 x:Name="ButtonEllipse" />
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center" />


                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>

                        </Border>

                        <Border BorderBrush="#FF505050"
                                BorderThickness="0"
                                Background="#FFFFF500"
                                ClipToBounds="True"
                                MinHeight="50"
                                MinWidth="50"
                                Width="50"
                                Height="50"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                CornerRadius="15,15,15,15"
                                Margin="500,0,0,0">
                            <Button Background="Transparent"
                                    Click="ButtonYellow_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Grid>
                                                        <Ellipse Fill="{TemplateBinding Background}"
                                                                 x:Name="ButtonEllipse" />
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center" />


                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>

                        </Border>

                        <Border BorderBrush="#FF505050"
                                BorderThickness="0"
                                Background="#FF1f1f1f"
                                ClipToBounds="True"
                                MinHeight="30"
                                MinWidth="30"
                                Width="30"
                                Height="30"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                CornerRadius="0,12,0,0"
                                Name="BtnExitBorder">

                            <Button x:Name="BtnExit"
                                    MinHeight="30"
                                    MinWidth="30"
                                    Width="30"
                                    Height="30"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Background="Transparent"
                                    BorderThickness="0,0,0,0"
                                    MouseEnter="BtnExit_MouseEnter"
                                    MouseLeave="BtnExit_MouseLeave"
                                    Click="BtnExit_Click"
                                    WindowChrome.IsHitTestVisibleInChrome="True">

                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>

                                <Viewbox Width="30"
                                         Height="30"
                                         Margin="-1,-1,0,0">
                                    <Canvas Width="30"
                                            Height="30">
                                        <Path Data="M 8,8 L 22,22 M 8,22 L 22,8"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Stroke="White">
                                        </Path>
                                    </Canvas>
                                </Viewbox>
                            </Button>
                        </Border>

                        <Button x:Name="MinExit"
                                Width="30"
                                Height="30"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Background="#FF1f1f1f"
                                BorderThickness="0,0,0,0"
                                Margin="0,0,30,0"
                                MouseEnter="MinExit_MouseEnter"
                                MouseLeave="MinExit_MouseLeave"
                                Click="MinExit_Click"
                                WindowChrome.IsHitTestVisibleInChrome="True">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>

                            <Viewbox Width="30"
                                     Height="30"
                                     Margin="-1,-1,0,0">
                                <Canvas Width="30"
                                        Height="30">
                                    <Path Data="M 8,15 L 22,15"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Stroke="White">
                                    </Path>
                                </Canvas>
                            </Viewbox>
                        </Button>

                        <Button x:Name="PlayStopButton"
                                Width="50"
                                Height="50"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="PlayStopButton_Click"
                                Margin="0,0,15,15">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Grid>
                                                    <Ellipse Fill="{TemplateBinding Background}"
                                                             x:Name="ButtonEllipse" />
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center" />


                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>

                            <Viewbox Width="50"
                                     Height="50">
                                <Canvas Width="50"
                                        Height="50">
                                    <Path x:Name="IconPath"
                                          Fill="White"
                                          Data="M 12,12 L 12,38 L 22,38 L 22,12 Z M 28,12 L 28,38 L 38,38 L 38,12 Z"
                                          RenderTransformOrigin="0.5,0.5"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center">
                                        <Path.RenderTransform>
                                            <ScaleTransform x:Name="IconTransform"
                                                            ScaleX="1"
                                                            ScaleY="1" />
                                        </Path.RenderTransform>
                                    </Path>
                                </Canvas>
                            </Viewbox>
                        </Button>
                        <Border BorderBrush="#FF505050"
                                BorderThickness="0"
                                Background="Red"
                                ClipToBounds="True"
                                MinHeight="50"
                                MinWidth="50"
                                Width="50"
                                Height="50"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                CornerRadius="15,15,15,15"
                                Margin="575,0,0,0">
                            <Button Background="Transparent"
                                    Click="ButtonRed_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Grid>
                                                        <Ellipse Fill="{TemplateBinding Background}"
                                                                 x:Name="ButtonEllipse" />
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center" />


                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>

                        </Border>
                        <Label Foreground="White"
                               x:Name="TimeText"
                               Content="1.01.2000"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Margin="0,40,100,0"
                               FontSize="20"
                               MinWidth="110"
                               MinHeight="40"
                               Height="40"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Right"
                               Width="100" />
                        <Label x:Name="BudgetLabel"
                               Content="Budżet: 100 000 PLN"
                               VerticalAlignment="Top"
                               Margin="0,10,250,0"
                               Foreground="White"
                               FontSize="16"
                               HorizontalAlignment="Right"
                               Width="200" />

                        <StackPanel Orientation="Vertical"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Right"
                                    Margin="0,10,120,0">

                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,5,0,0"
                                        Cursor="Hand">

                                <Rectangle x:Name="SpeedBar1"
                                           Width="10"
                                           Height="25"
                                           Margin="2"
                                           Fill="Gray"
                                           RadiusX="2"
                                           RadiusY="2"
                                           Tag="1"
                                           MouseLeftButtonDown="SpeedBar_Click" />

                                <Rectangle x:Name="SpeedBar2"
                                           Width="10"
                                           Height="25"
                                           Margin="2"
                                           Fill="Gray"
                                           RadiusX="2"
                                           RadiusY="2"
                                           Tag="2"
                                           MouseLeftButtonDown="SpeedBar_Click" />

                                <Rectangle x:Name="SpeedBar3"
                                           Width="10"
                                           Height="25"
                                           Margin="2"
                                           Fill="Gray"
                                           RadiusX="2"
                                           RadiusY="2"
                                           Tag="3"
                                           MouseLeftButtonDown="SpeedBar_Click" />

                                <Rectangle x:Name="SpeedBar4"
                                           Width="10"
                                           Height="25"
                                           Margin="2"
                                           Fill="Gray"
                                           RadiusX="2"
                                           RadiusY="2"
                                           Tag="4"
                                           MouseLeftButtonDown="SpeedBar_Click" />

                                <Rectangle x:Name="SpeedBar5"
                                           Width="10"
                                           Height="25"
                                           Margin="2"
                                           Fill="Gray"
                                           RadiusX="2"
                                           RadiusY="2"
                                           Tag="5"
                                           MouseLeftButtonDown="SpeedBar_Click" />

                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border BorderBrush="#FF505050"
                        BorderThickness="0"
                        ClipToBounds="True"
                        CornerRadius="0,0,12,0"
                        MinWidth="500"
                        MinHeight="400"
                        Margin="300,100,0,0">
                    <Border.Background>
                        <ImageBrush ImageSource="/Resource/smallNormal.png"
                                    Stretch="None"
                                    Opacity="1"
                                    x:Name="ImageBackground"/>
                    </Border.Background>
                    <Grid>



                        <Frame x:Name="MainFrame"
                               Grid.Row="1"
                               Grid.Column="1"
                               NavigationUIVisibility="Hidden"
                               Content=""
                               Visibility="Visible"
                               Margin="0,0,0,0" />


                    </Grid>
                </Border>

            </Grid>
        </Border>
    </Border>
</Window>
