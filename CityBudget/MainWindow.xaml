<Window x:Class="CityBudget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CityBudget"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="1024"
        Width="1280"
        MaxHeight="1024"
        MaxWidth="1280"
        MinHeight="1024"
        MinWidth="1280">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resource/StartStop.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>


    <Grid Background="#2b2b31">

        <Grid MaxWidth="300"
              MinWidth="300"
              Margin="0,100,0,0"
              HorizontalAlignment="Left"
              Background="#1d1d20">
            <Label Content="Ostatnie Wiadomości"
                   HorizontalAlignment="Center"
                   Margin="20,5,20,0"
                   VerticalAlignment="Top"
                   HorizontalContentAlignment="Center"
                   Foreground="White"
                   FontSize="25" />
        </Grid>


        <Grid MinHeight="100"
              VerticalAlignment="Top"
              Background="#FF17171B">

            <Button x:Name="PlayStopButton"
                    Width="50"
                    Height="50"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="PlayStopButton_Click"
                    Margin="0,0,45,11">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Grid>
                                        <Ellipse Fill="{TemplateBinding Background}"
                                                 x:Name="ButtonEllipse" />
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />


                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>

                <Viewbox Width="50"
                         Height="50">
                    <Canvas Width="50"
                            Height="50">
                        <Path x:Name="IconPath"
                              Fill="White"
                              Data="M 12,12 L 12,38 L 22,38 L 22,12 Z M 28,12 L 28,38 L 38,38 L 38,12 Z"
                              RenderTransformOrigin="0.5,0.5"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center">
                            <Path.RenderTransform>
                                <ScaleTransform x:Name="IconTransform"
                                                ScaleX="1"
                                                ScaleY="1" />
                            </Path.RenderTransform>
                        </Path>
                    </Canvas>
                </Viewbox>
            </Button>

            <Label Foreground="White"
                   x:Name="TimeText"
                   Content="1.01.2000"
                   HorizontalAlignment="Right"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Margin="0,0,20,0"
                   VerticalAlignment="Top"
                   FontSize="20"
                   MinWidth="100"
                   MinHeight="40" />

        </Grid>
        <TextBlock Name="TextBlock"
                   HorizontalAlignment="Left"
                   Margin="672,311,0,0"
                   TextWrapping="Wrap"
                   Text="TextBlock"
                   VerticalAlignment="Top"
                   Height="113"
                   Width="149"
                   Foreground="White" />

    </Grid>
</Window>
