<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Storyboard x:Key="PlayToStop">
        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="IconPath"
                                       Storyboard.TargetProperty="Data">
            <DiscreteObjectKeyFrame KeyTime="0:0:0">
                <DiscreteObjectKeyFrame.Value>
                    <PathGeometry Figures="M 15,10 L 15,40 L 40,25 Z" />
                </DiscreteObjectKeyFrame.Value>
            </DiscreteObjectKeyFrame>
            <DiscreteObjectKeyFrame KeyTime="0:0:0.3">
                <DiscreteObjectKeyFrame.Value>
                    <PathGeometry Figures="M 12,12 L 12,38 L 22,38 L 22,12 Z M 28,12 L 28,38 L 38,38 L 38,12 Z" />
                </DiscreteObjectKeyFrame.Value>
            </DiscreteObjectKeyFrame>
        </ObjectAnimationUsingKeyFrames>

        <DoubleAnimation Storyboard.TargetName="IconTransform"
                         Storyboard.TargetProperty="ScaleX"
                         From="1"
                         To="0.9"
                         Duration="0:0:0.15"
                         AutoReverse="True" />
        <DoubleAnimation Storyboard.TargetName="IconTransform"
                         Storyboard.TargetProperty="ScaleY"
                         From="1"
                         To="0.9"
                         Duration="0:0:0.15"
                         AutoReverse="True" />
    </Storyboard>

    <Storyboard x:Key="StopToPlay">
        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="IconPath"
                                       Storyboard.TargetProperty="Data">
            <DiscreteObjectKeyFrame KeyTime="0:0:0">
                <DiscreteObjectKeyFrame.Value>
                    <PathGeometry Figures="M 12,12 L 12,38 L 22,38 L 22,12 Z M 28,12 L 28,38 L 38,38 L 38,12 Z" />
                </DiscreteObjectKeyFrame.Value>
            </DiscreteObjectKeyFrame>
            <DiscreteObjectKeyFrame KeyTime="0:0:0.3">
                <DiscreteObjectKeyFrame.Value>
                    <PathGeometry Figures="M 15,10 L 15,40 L 40,25 Z" />
                </DiscreteObjectKeyFrame.Value>
            </DiscreteObjectKeyFrame>
        </ObjectAnimationUsingKeyFrames>

        <DoubleAnimation Storyboard.TargetName="IconTransform"
                         Storyboard.TargetProperty="ScaleX"
                         From="1"
                         To="0.9"
                         Duration="0:0:0.15"
                         AutoReverse="True" />
        <DoubleAnimation Storyboard.TargetName="IconTransform"
                         Storyboard.TargetProperty="ScaleY"
                         From="1"
                         To="0.9"
                         Duration="0:0:0.15"
                         AutoReverse="True" />

    </Storyboard>
</ResourceDictionary>