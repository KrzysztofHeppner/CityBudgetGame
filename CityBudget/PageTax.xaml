<Page x:Class="CityBudget.PageTax"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Finanse">

    <Grid Background="#2D2D30">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="300">
            <TextBlock Text="ZARZĄDZANIE FINANSAMI"
                       Foreground="White"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center" />

            <TextBlock Text="Obecny budżet:"
                       Foreground="#AAAAAA"
                       FontSize="14" />
            <TextBlock x:Name="BudgetDisplay"
                       Text="100 000 PLN"
                       Foreground="#4CAF50"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,20" />

            <TextBlock Text="Stawka podatkowa:"
                       Foreground="#AAAAAA"
                       FontSize="14" />
            <StackPanel Orientation="Horizontal"
                        Margin="0,5,0,0">
                <Slider x:Name="TaxSlider"
                        Minimum="0"
                        Maximum="0.5"
                        Width="200"
                        TickFrequency="0.01"
                        IsSnapToTickEnabled="True"
                        ValueChanged="TaxSlider_ValueChanged" />
                <TextBlock x:Name="TaxValueText"
                           Text="15%"
                           Foreground="White"
                           FontSize="16"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center" />
            </StackPanel>

            <TextBlock Text="Wysokie podatki obniżają zadowolenie!"
                       Foreground="#FF5555"
                       FontSize="10"
                       Margin="0,5,0,0"
                       FontStyle="Italic" />
        </StackPanel>
    </Grid>
</Page>