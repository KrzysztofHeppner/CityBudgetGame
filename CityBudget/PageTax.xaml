<Page x:Class="CityBudget.PageTax"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Finanse"
      Loaded="Page_Loaded">

    <Grid Background="#2D2D30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*" />
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="1.2*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0"
                    Margin="10">
            <TextBlock Text="PODATKI (PRZYCHODY)"
                       Foreground="#88FF88"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,10" />

            <TextBlock Text="PIT (Dochodowy)"
                       Foreground="#AAA" />
            <Slider x:Name="SliderPIT"
                    Minimum="0"
                    Maximum="0.50"
                    TickFrequency="0.01"
                    ValueChanged="Sliders_ValueChanged" />
            <TextBlock x:Name="TextPIT"
                       Text="18%"
                       Foreground="White"
                       HorizontalAlignment="Right" />

            <TextBlock Text="VAT (Konsumpcja)"
                       Foreground="#AAA"
                       Margin="0,10,0,0" />
            <Slider x:Name="SliderVAT"
                    Minimum="0"
                    Maximum="0.40"
                    TickFrequency="0.01"
                    ValueChanged="Sliders_ValueChanged" />
            <TextBlock x:Name="TextVAT"
                       Text="23%"
                       Foreground="White"
                       HorizontalAlignment="Right" />

            <TextBlock Text="Nieruchomości (stały)"
                       Foreground="#AAA"
                       Margin="0,10,0,0" />
            <Slider x:Name="SliderProp"
                    Minimum="0"
                    Maximum="500"
                    TickFrequency="10"
                    ValueChanged="Sliders_ValueChanged" />
            <TextBlock x:Name="TextProp"
                       Text="50 PLN"
                       Foreground="White"
                       HorizontalAlignment="Right" />

            <TextBlock Text="Im wyższe podatki, tym większe niezadowolenie!"
                       Foreground="Gray"
                       TextWrapping="Wrap"
                       Margin="0,20,0,0"
                       FontSize="10"
                       FontStyle="Italic" />
        </StackPanel>

        <ScrollViewer Grid.Column="1"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <TextBlock Text="FINANSOWANIE USŁUG"
                           Foreground="#FF8888"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,10" />
                <TextBlock Text="(&lt;100% obniża zadowolenie, >100% zwiększa)"
                           Foreground="Gray"
                           FontSize="10"
                           Margin="0,0,0,10" />

                <TextBlock Text="Szkoły i Edukacja"
                           Foreground="#DDD" />
                <Slider x:Name="Sl_Edu"
                        Minimum="0.5"
                        Maximum="2.0"
                        TickFrequency="0.1"
                        ValueChanged="Sliders_ValueChanged" />
                <TextBlock x:Name="Tx_Edu"
                           Text="100%"
                           Foreground="White"
                           HorizontalAlignment="Right" />

                <TextBlock Text="Szpitale (Zdrowie)"
                           Foreground="#DDD"
                           Margin="0,5,0,0" />
                <Slider x:Name="Sl_Health"
                        Minimum="0.5"
                        Maximum="2.0"
                        TickFrequency="0.1"
                        ValueChanged="Sliders_ValueChanged" />
                <TextBlock x:Name="Tx_Health"
                           Text="100%"
                           Foreground="White"
                           HorizontalAlignment="Right" />

                <TextBlock Text="Policja"
                           Foreground="#DDD"
                           Margin="0,5,0,0" />
                <Slider x:Name="Sl_Police"
                        Minimum="0.5"
                        Maximum="2.0"
                        TickFrequency="0.1"
                        ValueChanged="Sliders_ValueChanged" />
                <TextBlock x:Name="Tx_Police"
                           Text="100%"
                           Foreground="White"
                           HorizontalAlignment="Right" />

                <TextBlock Text="Straż Pożarna"
                           Foreground="#DDD"
                           Margin="0,5,0,0" />
                <Slider x:Name="Sl_Fire"
                        Minimum="0.5"
                        Maximum="2.0"
                        TickFrequency="0.1"
                        ValueChanged="Sliders_ValueChanged" />
                <TextBlock x:Name="Tx_Fire"
                           Text="100%"
                           Foreground="White"
                           HorizontalAlignment="Right" />

                <TextBlock Text="Drogi i Infrastruktura"
                           Foreground="#DDD"
                           Margin="0,5,0,0" />
                <Slider x:Name="Sl_Roads"
                        Minimum="0.5"
                        Maximum="2.0"
                        TickFrequency="0.1"
                        ValueChanged="Sliders_ValueChanged" />
                <TextBlock x:Name="Tx_Roads"
                           Text="100%"
                           Foreground="White"
                           HorizontalAlignment="Right" />

                <TextBlock Text="Urzędy (Administracja)"
                           Foreground="#DDD"
                           Margin="0,5,0,0" />
                <Slider x:Name="Sl_Admin"
                        Minimum="0.5"
                        Maximum="2.0"
                        TickFrequency="0.1"
                        ValueChanged="Sliders_ValueChanged" />
                <TextBlock x:Name="Tx_Admin"
                           Text="100%"
                           Foreground="White"
                           HorizontalAlignment="Right" />
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Column="2"
                Background="#333"
                Margin="5">
            <StackPanel Margin="10">
                <TextBlock Text="BILANS"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           HorizontalAlignment="Center" />
                <Separator Margin="0,5"
                           Background="#555" />

                <TextBlock Text="Przychody:"
                           FontWeight="Bold"
                           Foreground="#88FF88" />
                <TextBlock x:Name="ValTotalInc"
                           Text="+0 PLN"
                           Foreground="#88FF88"
                           Margin="0,0,0,10" />

                <TextBlock Text="Wydatki:"
                           FontWeight="Bold"
                           Foreground="#FF8888" />
                <TextBlock x:Name="ValTotalExp"
                           Text="-0 PLN"
                           Foreground="#FF8888"
                           Margin="0,0,0,10" />

                <TextBlock Text="MIESIĘCZNIE:"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="White" />
                <TextBlock x:Name="ValBalance"
                           Text="0 PLN"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,5" />

                <Separator Margin="0,20"
                           Background="#555" />
                <TextBlock Text="Budżet całkowity:"
                           Foreground="#AAA" />
                <TextBlock x:Name="BudgetDisplay"
                           Text="100 000 PLN"
                           Foreground="#4CAF50"
                           FontSize="20"
                           FontWeight="Bold" />
            </StackPanel>
        </Border>
    </Grid>
</Page>