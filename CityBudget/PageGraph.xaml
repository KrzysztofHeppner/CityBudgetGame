<Page x:Class="CityBudget.PageGraph"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CityBudget"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageGraph"
      Name="GraphWindow">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Background="White"
                CornerRadius="8"
                Padding="10"
                Margin="20,20,20,20">

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Content="Wróć"
                        Click="BtnBack_Click"
                        Padding="15,5"
                        Margin="5,5,5,5"
                        Background="#007ACC"
                        Foreground="White"
                        BorderThickness="0"/>
                <Button Content="Wiek"
                        Click="BtnAge_Click"
                        Padding="15,5"
                        Margin="5"
                        Background="#007ACC"
                        Foreground="White"
                        BorderThickness="0" />
                <Button Content="Majątek"
                        Click="BtnWealth_Click"
                        Padding="15,5"
                        Margin="5"
                        Background="#007ACC"
                        Foreground="White"
                        BorderThickness="0" />
                <Button Content="Zadowolenie"
                        Click="BtnHappiness_Click"
                        Padding="15,5"
                        Margin="5"
                        Background="#007ACC"
                        Foreground="White"
                        BorderThickness="0" />
            </StackPanel>
        </Border>

        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Padding="20"
                Margin="20,0,20,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10"
                                  ShadowDepth="2"
                                  Opacity="0.1"
                                  Color="Black" />
            </Border.Effect>

            <Grid Name="ChartGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>

                <Canvas Name="AxisYCanvas"
                        Grid.Row="0"
                        Grid.Column="0" />

                <Canvas Name="ChartCanvas"
                        Grid.Row="0"
                        Grid.Column="1"
                        ClipToBounds="True" />

                <Canvas Name="AxisXCanvas"
                        Grid.Row="1"
                        Grid.Column="1" />
                <Frame x:Name="PageGraphFrame"
                       JournalOwnership="OwnsJournal"
                       NavigationUIVisibility="Hidden" />
            </Grid>
        </Border>
    </Grid>
</Page>
